<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:component="http://jasperreports.sourceforge.net/jasperreports/components"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd
                http://jasperreports.sourceforge.net/jasperreports/components http://jasperreports.sourceforge.net/xsd/components.xsd"
              name="GameReport"
              pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20"
              uuid="11111111-2222-3333-4444-555555555555">

    <subDataset name="CorrectionsDataset" uuid="22222222-3333-4444-5555-666666666666">
        <field name="text" class="java.lang.String"/>
        <field name="playerName" class="java.lang.String"/>
    </subDataset>

    <parameter name="roomId" class="java.lang.String"/>
    <parameter name="packName" class="java.lang.String"/>

    <field name="questionText" class="java.lang.String"/>
    <field name="answer" class="com.example.group_learn_project.gameReports.AnswerDTO"/>
    <field name="corrections" class="java.util.List"/>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30" forecolor="#000000"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Group Learn - Game Report]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="50" width="555" height="20"/>
                <textElement textAlignment="Left">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Room: " + $P{roomId}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="70" width="555" height="20"/>
                <textElement textAlignment="Left">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Pack: " + $P{packName}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="185">

            <line>
                <reportElement x="0" y="5" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="2.0" lineColor="#CCCCCC"/>
                </graphicElement>
            </line>

            <rectangle>
                <reportElement x="0" y="15" width="555" height="25" backcolor="#F5F5F5" mode="Opaque"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="10" y="18" width="100" height="20" forecolor="#000000"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true" size="11"/>
                </textElement>
                <text><![CDATA[Question:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="110" y="18" width="435" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{questionText}]]></textFieldExpression>
            </textField>

            <rectangle>
                <reportElement x="0" y="50" width="555" height="40" backcolor="#E6F3FF" mode="Opaque"/>
                <graphicElement>
                    <pen lineWidth="0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="10" y="53" width="100" height="20" forecolor="#0066cc"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true" size="11"/>
                </textElement>
                <text><![CDATA[Answer:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="110" y="53" width="435" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{answer} != null ? $F{answer}.getText() : "No answer submitted"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="110" y="73" width="435" height="15" forecolor="#666666"/>
                <textElement>
                    <font size="9" isItalic="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{answer} != null ? "by " + $F{answer}.getPlayerName() : ""]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="10" y="100" width="100" height="20" forecolor="#009933"/>
                <textElement verticalAlignment="Middle">
                    <font isBold="true" size="11"/>
                </textElement>
                <text><![CDATA[Corrections:]]></text>
            </staticText>

            <componentElement>
                <reportElement x="0" y="125" width="555" height="50"/>
                <component:list printOrder="Vertical">
                    <datasetRun subDataset="CorrectionsDataset" uuid="33333333-4444-5555-6666-777777777777">
                        <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($F{corrections} != null ? $F{corrections} : new java.util.ArrayList())]]></dataSourceExpression>
                    </datasetRun>
                    <component:listContents height="40">
                        <rectangle>
                            <reportElement x="0" y="0" width="555" height="38" backcolor="#F0FFF0" mode="Opaque"/>
                            <graphicElement>
                                <pen lineWidth="0"/>
                            </graphicElement>
                        </rectangle>
                        <textField isStretchWithOverflow="true">
                            <reportElement x="110" y="3" width="435" height="20" uuid="44444444-5555-6666-7777-888888888888"/>
                            <textElement verticalAlignment="Middle">
                                <font size="11"/>
                            </textElement>
                            <textFieldExpression><![CDATA[$F{text}]]></textFieldExpression>
                        </textField>
                        <textField>
                            <reportElement x="110" y="23" width="435" height="15" forecolor="#666666" uuid="55555555-6666-7777-8888-999999999999"/>
                            <textElement>
                                <font size="9" isItalic="true"/>
                            </textElement>
                            <textFieldExpression><![CDATA["by " + $F{playerName}]]></textFieldExpression>
                        </textField>
                    </component:listContents>
                </component:list>
            </componentElement>

        </band>
    </detail>

</jasperReport>